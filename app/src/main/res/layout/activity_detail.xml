<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.detail"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/img_7"
    android:textAlignment="center"
    android:paddingTop="50dp">



    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_prioritas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="prioritas"
        android:textColor="#FFBF00"
        android:fontFamily="@font/q"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_hari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_prioritas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="hari"

        android:fontFamily="@font/q"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hari"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="judul"
        android:fontFamily="@font/q"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_isi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_judul"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="isi"
        android:fontFamily="@font/q"
        android:textAlignment="center"
        android:textColor="#DF0D0D"
        android:textSize="30dp"
       android:background="@drawable/button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="35dp"
        android:id="@+id/tv_id"
        android:visibility="gone"/>




</RelativeLayout>